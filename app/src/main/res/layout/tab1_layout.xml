<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81DAF5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#F2FBEF"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="9">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평이나 면적을 입력하세요"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F6D8CE"
            />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계산결과가 없습니다."
            android:gravity="center"
            android:background="#D8D8D8"
            android:layout_margin="20dp"
            android:layout_weight="1"

            />

        <Button
            android:id="@+id/b1"
            android:onClick="onClickTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평을 제곱미터로 전환"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2EFE"/>

        <Button
            android:id="@+id/b2"
            android:onClick="onClickTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="제곱미터를 평으로 전환"
            android:background="#58FA58"
            android:layout_weight="1"/>



    </LinearLayout>
</LinearLayout>